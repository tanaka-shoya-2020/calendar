<div class="sidenav">
  <div class="login-main-text">
    <h2>チーム<br> Sign up Page</h2>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="red">
          <%= render "users/shared/error_messages", resource: resource %>
        </div>
        <div class="form-group">
          <%= f.label :チーム名 %><br>
          <%= f.text_field :name, autofocus: true, placeholder: "チーム名を入力してください(最大20文字)", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %><br>
          <%= f.password_field :password, placeholder: "6文字以上の英数字を入力してください", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, placeholder: "もう一度入力してください", class: "form-control" %>
        </div>
          <%= f.submit "チームを作成",class: "btn btn-black" %>
      <% end %>
    </div>
  </div>
</div>
